<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="main">
        <fieldset name="primaryfieldset" label="COM_AQJFORM_PRIMARYFIELDSET_LABEL">
            <field
                    type="text"
                    name="my_text_field"
                    id="myTextField"
                    label="COM_AQJFORM_MY_TEXT_FIELD_LABEL"
                    description="COM_AQJFORM_MY_TEXT_FIELD_DESCRIPTION"
                    size="80"
                    maxLength="255" />
            <field
                    type="text"
                    name="my_other_text_field"
                    id="myOtherTextField"
                    label="COM_AQJFORM_MY_OTHER_TEXT_FIELD_LABEL"
                    description="COM_AQJFORM_MY_OTHER_TEXT_FIELD_DESCRIPTION"
                    size="80"
                    maxLength="255" />
            <field
                    type="editor"
                    name="my_editor_field"
                    id="myEditorField"
                    label="COM_AQJFORM_MY_EDITOR_FIELD_LABEL"
                    description="COM_AQJFORM_MY_EDITOR_FIELD_DESCRIPTION"
                    rows="5"
                    cols="200"/>
        </fieldset>
        <fieldset name="secondaryfieldset" label="COM_AQJFORM_SECONDARYFIELDSET_LABEL">
            <field
                    type="radio"
                    name="my_radio_field"
                    id="myRadioField"
                    label="COM_AQJFORM_MY_RADIO_FIELD_LABEL"
                    description="COM_AQJFORM_MY_RADIO_FIELD_DESCRIPTION">
                <option value="0">YES</option>
                <option value="1">NO</option>
            </field>
        </fieldset>
    </fields>
    <fields name="immutable">
        <!-- Fieldsets go here -->
    </fields>
    <fields name="extra">
        <fieldset name="publishing" label="COM_AQJFORM_PUBLISHING_LABEL">
            <field
                    name="created"
                    type="calendar"
                    label="COM_AQJFORM_CREATED_FIELD_LABEL"
                    description="COM_AQJFORM_MY_CREATED_FIELD_DESCRIPTION"
                    class="inputbox" size="20"
                    format="%Y-%m-%d %H:%M:%S"
                    filter="user_utc" />
            <field
                    name="created_by"
                    type="user"
                    label="COM_AQJFORM_CREATED_BY_FIELD_LABEL"
                    description="COM_AQJFORM_CREATED_BY_FIELD_DESCRIPTION" />
            <field
                    name="created_by_alias"
                    type="text"
                    label="COM_AQJFORM_CREATED_BY_ALIAS_FIELD_LABEL"
                    description="COM_AQJFORM_CREATED_BY_ALIAS_FIELD_DESCRIPTION"
                    class="inputbox"
                    size="20" />
        </fieldset>
        <fieldset name="metadata" label="COM_AQJFORM_METADATA_LABEL">
            <field
                    name="metakey"
                    type="textarea"
                    label="COM_AQJFORM_KEYWORDS_FIELD_LABEL"
                    description="COM_AQJFORM_KEYWORDS_FIELD_DESCRIPTION"
                    class="inputbox"
                    rows="3"
                    cols="30" />
            <field
                    name="metadesc"
                    type="textarea"
                    label="COM_AQJFORM_DESCRIPTION_FIELD_LABEL"
                    description="COM_AQJFORM_DESCRIPTION_FIELD_DESCRIPTION"
                    class="inputbox"
                    rows="3"
                    cols="30" />
        </fieldset>
    </fields>
</form>
